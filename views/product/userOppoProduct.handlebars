<body>
    <div class="wrapper">
        <div class="item">
            <a class="links" href="/product/userAppleProduct">
                <img src="../../img/appleIcon.png" width="40px" height="60px">
            </a>
        </div>

        <div class="item">
            <a class="links" href="/product/userSamsungProduct">
                <img src="../../img/samsungIcon.png" width="100px" height="100px">
            </a>
        </div>

        <div class="item">
            <a class="links" href="/product/userGoogleProduct">
                <img src="../../img/googleIcon.png" width="60px" height="60px">
            </a>
        </div>

        <div class="item">
            <a class="links" href="/product/userHuaweiProduct">
                <img src="../../img/HuaweiIcoin.png" width="60px" height="60px">
            </a>
        </div>

        <div class="item">
            <a class="links" href="/product/userSonyProduct">
                <img src="../../img/SonyIcon.png" width="90px" height="40px">
            </a>
        </div>

        <div class="item">
            <a class="links" href="/product/userOppoProduct">
                <img src="../../img/oppoIcon.png" width="90px" height="50px">
            </a>
        </div>

    </div>

    <!-- content -->
    <div class="small-container">
        <div class="row row-2">
            <h2>Oppo Products</h2>
        </div>

        <div class="row">
            {{#each products}}
            <div class="col-4">
                <a href="/product/SingleProduct/{{id}}">
                    <img src="../../img/{{posterUpload}}" height="200">
                    <h4>{{Name}}</h4>
                    <p>{{Price}}</p>
                </a>
            </div>
            {{/each}}
        </div>
    </div>

</body>

<style>
/* personalisation Content */
.wrapper{
  max-height: 120px;
  border: 1px solid #ddd;
  display: flex;
  background-color: #ddd;
}

.wrapper .item{
  min-width: 110px;
  height: 110px;
  line-height: 110px;
  text-align: center;
  background-color: #ddd;
  margin: 0 auto;
}


.picApple{
  background-size: 37px 54px;
  background-repeat: no-repeat;
  background-image: url(/img/AppleImage.png);
}

a {
  text-decoration: none ;
}

a:hover {
  text-decoration:none;
  cursor:pointer;
}

/* Product Page Content */
.row-2{
  justify-content: space-between;
  margin: 50px auto 50px;
  
}

.small-container{
  max-width:1080px;
  margin:auto;
  padding-left: 25px;
  padding-right: 25px;
}

.col-4{
  flex-basis:25%;
  padding:10px;
  min-width:200px;
  margin-bottom:5%;
  transition: transform 0.5s;
}



.col-4 p{
  font-size: 14px;
}

.col-4:hover{
  transform: translateY(-5px);
}
</style>