<style>
	.btn2 {
		background-color: red;
		text-align: center;
		display: inline-block;
		padding: 0.3em 1.2em;
		margin: 0 0.3em 0.3em 0;
		border-radius: 2em;
		box-sizing: border-box;
		font-family: 'Roboto', sans-serif;
		font-weight: 300;
		color: #FFFFFF;
		text-align: center;
		transition: all 0.2s;
		margin-left:1000px;
	}

	.btn2:hover {
		background-color: black;
		text-decoration: none;
		color:white;
	}

	.search-form {
		position: absolute;
		top: 1;
		right: 0;
		margin: 5px auto;
		margin-right: 20px;
		border-radius:3px;
		width:500px;
	}
</style>
<div class="row">
	{{> _admin-sidebar }}
	<div class="col-sm-12 col-md-10">
		<div class="container">
			{{#if products}}
			<div class="card card-body">
				<h4 class="">Products</h4>
				<br>
				<a href="/admin/product/add" class="btn2" style="width:200px; padding-top:10px; padding-bottom:10px; margin-right:100px;">Add Products</a>
			
					<input oninput="search()" style="margin-top:-30px; margin-bottom:10px;padding:3px; border-radius:3px; border-width:1px; width:300px; padding-top:7px; padding-bottom:7px;" type="text"
						placeholder="Search Brand">
<br>
				{{#each products}}
				<div class="">
					<div class="card-header" style="background-color: #bdc3c7;">
						<h5 class="card-title">{{Name}}</h5>
					</div>
					<div class="card-body" style="background-color:white;">
						<div class="row">
							<div class="col-sm-12 col-md-12 col-lg-3">
								<img src="/uploads/{{posterUpload}}" height="100" >
							</div>

							<div class="col-sm-12 col-md-12 col-lg-3">
								<h6 class="font-italic">Category: {{Brand}}</h6>
							</div>
								<div class="col-sm-12 col-md-12 col-lg-3">
								
							
							</div>
						
							
						
					
							<div class="col-sm-12 col-md-12 col-lg-2">
								<h6 class="font-italic">Base Price: ${{Price}}</h6>
							
							</div>
							<div class="col-sm-12 col-md-12 col-lg-2" style="margin-left:1080px;">
								<p class="font-italic"></p>
									<a href="/admin/product/edit/{{id}}" class="card-link" style="color:#2c3e50;">
									<i class="fas fa-pencil-alt"></i>
									Edit
								</a>
									<a href="/admin/product/delete/{{id}}" onclick="return confirm('Are you sure you want to delete this product?')" class="card-link" data-toggle="confirmation"
									data-title="Confirm delete?" style="color:#2c3e50;" >
									<i class="far fa-trash-alt"></i>
									Delete
								</a>
								
							
							
							</div>
						</div>
					</div>
					
					<div class="accordion" id="storyAccordion">
						<div class="card-header" id="headingOne" style="padding-top:20px; padding-bottom:20px;">
							{{Description}}
						</div>
					</div>
				</div>
				<br><br>
				{{/each}}
			</div>
		</div>
		{{else}}
		<h3>No Products Added</h3>
		<a href="/admin/product/add" class="btn2">Add Products</a>
		{{/if}}
	</div>
</div>

<script>

	function search()
	{
		let value = event.target.value;

		let cards = document.querySelectorAll('.card.border-primary');

		cards.forEach((card)=>{
			

			if(!$(card).find('.text-info').text().toLowerCase().includes(value))
			{
				$(card).css('display','none');
			}
			else
			{
				$(card).css('display','initial');
			}

		})

	}

</script>